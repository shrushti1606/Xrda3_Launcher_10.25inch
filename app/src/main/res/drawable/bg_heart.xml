<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:type="linear"
        android:angle="45"
        android:startColor="#FF5FD2"
        android:endColor="#B24CFF" />

    <!-- Rounded corners -->
    <corners
        android:radius="16dp" />

    <!-- Soft glow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>
</shape>
