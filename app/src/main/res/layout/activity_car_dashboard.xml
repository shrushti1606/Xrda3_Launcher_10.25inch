<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E14">

    <TextView
        android:id="@+id/tvUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sourabh Patil"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My car"
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUser"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTopCamera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#1A1B22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintWidth_percent="0.42"
        android:layout_margin="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/top_angle_car"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Tyre Pressure -->
    <LinearLayout
        android:id="@+id/cardTyre"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="2"
        app:cardBackgroundColor="#1F2030"
        app:cardCornerRadius="20dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardTopCamera"
        app:layout_constraintTop_toTopOf="@id/cardTopCamera">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/car_tyre"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_icon_dark_bluettoth"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_icon_dark_bluettoth"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driving mode"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="âš¡ Sport"
                android:textColor="#FF4D6D"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Eco"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="City"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_icon_dark_bluettoth"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:padding="24dp">

                <View
                    android:background="#F472FF"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:background="#55FF7A"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <View
                    android:background="#6A5CFF"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <View
                    android:background="#FF8C42"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"/>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/cardParking"
        android:layout_width="0dp"
        android:layout_height="280dp"
        app:cardCornerRadius="24dp"
        android:layout_weight="2"
        app:cardBackgroundColor="#1A1B22"
        app:layout_constraintStart_toEndOf="@id/cardTopCamera"
        app:layout_constraintTop_toBottomOf="@id/cardTyre"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">
    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_icon_dark_bluettoth"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/car_parking"
            android:scaleType="centerCrop"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_icon_dark_bluettoth"
            android:orientation="vertical"
            android:paddingLeft="12dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Car Assistance"
                android:textColor="#AAAAAA"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Car maintance history"
                android:textColor="#FF4D6D"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Roadside assistance"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="City"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#1A1B22"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:src="@drawable/ic_home"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <ImageView
            android:src="@drawable/ic_car"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="32dp"/>
        <ImageView
            android:src="@drawable/ic_music"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
