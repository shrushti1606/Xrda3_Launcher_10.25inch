<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bluetoth_gradient"
    android:padding="24dp">

    <!-- LEFT PANEL -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Header -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Bluetooth"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:text="Manage connections and devices"
            android:textSize="14sp"
            android:textColor="#9AA0A6"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Bluetooth ON Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:text="Bluetooth is On\nDiscoverable as \"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

            <Switch
                android:checked="true"
                android:thumbTint="#1DE9B6"
                android:trackTint="#0F766E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Paired Devices -->
        <TextView
            android:text="PAIRED DEVICES"
            android:textColor="#9AA0A6"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Device Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_card_activebluetooth"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_bluetooth"/>

            <TextView
                android:text="Sarah's iPhone 15 Pro\nConnected for Calls &amp; Media"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Disconnect"
                android:textColor="#00E5FF"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/bg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Inactive Device -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_dark_bluettoth"/>

            <TextView
                android:text="Alex Pixel 8\nNot Connected"
                android:textColor="#9AA0A6"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Connect"
                android:textColor="#9AA0A6"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/bg_button_dark_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_dark_bluettoth"/>

            <TextView
                android:text="Sony WH-1000XM5\nNot Connected"
                android:textColor="#9AA0A6"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Connect"
                android:textColor="#9AA0A6"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/bg_button_dark_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <!-- RIGHT PANEL -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/bg_side_panel_blue"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <TextView
            android:text="AVAILABLE DEVICES"
            android:textColor="#9AA0A6"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Searching for devices..."
            android:textColor="#00E5FF"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_dark_bluettoth"/>

            <TextView
                android:text="MacBook Pro\nNearby"
                android:textColor="#9AA0A6"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_dark_bluettoth"/>

            <TextView
                android:text="Apple Watch\nNearby"
                android:textColor="#9AA0A6"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
