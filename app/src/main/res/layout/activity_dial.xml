<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    tools:context="com.xrda3.xrda3_launcher.call.DialActivity">

    <!-- TOP STATUS BAR -->
    <include
        android:id="@+id/topStatusBar"
        layout="@layout/layout_top_status_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LEFT CALL NAV BAR -->
    <include
        android:id="@+id/callNavBar"
        layout="@layout/call_nav_layout"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/topStatusBar"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- KEYPAD -->
    <include
        android:id="@+id/keypadLayout"
        layout="@layout/keypad_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/topStatusBar"
        app:layout_constraintStart_toEndOf="@id/callNavBar"/>

    <!-- CONTACT LIST -->
    <ListView
        android:id="@+id/listContacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        app:layout_constraintTop_toBottomOf="@id/topStatusBar"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toEndOf="@id/keypadLayout"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- FOOTER / BOTTOM NAV -->
    <include
        android:id="@+id/footer"
        layout="@layout/layout_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
