<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_contact_item"
    android:layout_marginBottom="12dp"
    android:padding="12dp">

    <!-- Profile -->
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user"
        android:background="@drawable/bg_circle_outline"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Name -->
    <TextView
        android:id="@+id/conName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rahul Sharma"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"/>

    <!-- Call Info -->
    <TextView
        android:id="@+id/conInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missed call · 10:42 AM · Mobile"
        android:textColor="#9FA4AA"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/conName"
        app:layout_constraintTop_toBottomOf="@id/conName"/>
    <TextView
        android:id="@+id/callType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUTGOING"
        android:textColor="#9FA4AA"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/conInfo"
        app:layout_constraintTop_toBottomOf="@id/conInfo"/>


    <!-- Call Button -->
    <ImageView
        android:id="@+id/btnCall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/calls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
