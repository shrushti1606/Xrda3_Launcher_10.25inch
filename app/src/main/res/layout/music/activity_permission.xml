<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#121826"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow Permissions"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We need access to give you the best driving music experience."
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

            <!-- Permission Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:columnCount="2">

                <!-- Storage -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/perm_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Storage Access"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For offline music"
                        android:textColor="#777777"
                        android:textSize="12sp"/>

                    <Switch
                        android:id="@+id/swStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NeonSwitch"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Bluetooth -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/perm_bg">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bluetooth Access"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For car audio"
                        android:textColor="#777777"
                        android:textSize="12sp"/>

                    <Switch
                        android:id="@+id/swBluetooth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NeonSwitch"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </GridLayout>

            <!-- Button -->
            <Button
                android:id="@+id/btnAllowAll"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="36dp"
                android:text="Allow All"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/neon_button"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
