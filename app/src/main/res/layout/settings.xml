<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen">

    <!-- ================= TITLE ================= -->
    <TextView
        android:id="@+id/tvSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customize your in-car experience"
        android:textSize="14sp"
        android:textColor="#99FFFFFF"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/tvSettings"
        app:layout_constraintTop_toBottomOf="@id/tvSettings"/>

    <!-- ================= GRID ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ===== SYSTEM INFO ===== -->
        <FrameLayout
            android:id="@+id/cardSystem"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Glow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_glow_blue"/>

            <!-- Glass -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card"/>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- TOP ROW -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/icSystem"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_system_info"
                        app:tint="#FFFFFF" />

                    <!-- Toggle circle (right) -->
                    <View
                        android:id="@+id/toggleSystem"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_toggle_circle"/>

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icSystem"
                        android:layout_marginStart="14dp"
                        android:text="System Info"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icSystem"
                        android:layout_toEndOf="@id/icSystem"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Device, software and storage status"
                        android:textSize="16sp"
                        android:textColor="#B3FFFFFF"/>
                </RelativeLayout>

                <!-- BOTTOM STATUS -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="82% storage free • Android Auto OS"
                    android:textSize="14sp"
                    android:textColor="#99FFFFFF"/>
            </LinearLayout>

        </FrameLayout>

        <!-- ===== DISPLAY ===== -->
        <FrameLayout
            android:id="@+id/cardDisplay"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="20dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toEndOf="@id/cardSystem"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_glow_purple"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="22dp"
                android:orientation="vertical">

                <!-- TOP ROW -->
                <RelativeLayout
                    android:layout_width="344dp"
                    android:layout_height="wrap_content">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/icDisplay"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_display"
                        app:tint="#FFFFFF" />

                    <!-- Toggle circle (right) -->
                    <View
                        android:id="@+id/toggleDisplay"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_toggle_circle" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_toEndOf="@id/icDisplay"
                        android:text="Display"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icDisplay"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/icDisplay"
                        android:text="Device, software and storage status"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_pill"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="Dark mode    68% brightness"
                    android:textSize="12sp"
                    android:textColor="#4DEBFF"/>
            </LinearLayout>
        </FrameLayout>

        <!-- ===== TIME & LANGUAGE ===== -->
        <FrameLayout
            android:id="@+id/cardTime"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="20dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toEndOf="@id/cardDisplay"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_glow_blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="22dp">

                <!-- TOP ROW -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/icTimenLang"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_timenlang"
                        app:tint="#FFFFFF" />

                    <!-- Toggle circle (right) -->
                    <View
                        android:id="@+id/toggleTime"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_toggle_circle"/>

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icTimenLang"
                        android:layout_marginStart="14dp"
                        android:text="Time And Language"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icTimenLang"
                        android:layout_toEndOf="@id/icTimenLang"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Clock, language and region format"
                        android:textSize="13sp"
                        android:textColor="#B3FFFFFF"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="24h format   English (US)"
                    android:textColor="#99FFFFFF"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <!-- ================= SECOND ROW ================= -->

        <!-- ===== DO NOT DISTURB ===== -->
        <FrameLayout
            android:id="@+id/cardDnd"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardSystem">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_glow_purple"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- TOP ROW -->
                <RelativeLayout
                    android:layout_width="341dp"
                    android:layout_height="wrap_content">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/icdnd"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_dnd"
                        app:tint="#FFFFFF" />

                    <!-- Toggle circle (right) -->
                    <View
                        android:id="@+id/toggleDnd"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_toggle_circle" />

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_toEndOf="@id/icdnd"
                        android:text="Do Not Disturb"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icdnd"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/icdnd"
                        android:text="Silence alerts while driving"
                        android:textColor="#B3FFFFFF"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_pill"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="DND scheduled"
                    android:textSize="12sp"
                    android:textColor="#9C6BFF"/>
            </LinearLayout>
        </FrameLayout>

        <!-- ===== BLUETOOTH ===== -->
        <FrameLayout
            android:id="@+id/cardBluetooth"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toEndOf="@id/cardDnd"
            app:layout_constraintTop_toBottomOf="@id/cardDisplay">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_glow_blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- TOP ROW -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/icBluetooth"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_bluetooth"
                        app:tint="#FFFFFF" />

                    <!-- Toggle circle (right) -->
                    <View
                        android:id="@+id/toggleBluetooth"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_toggle_circle"/>

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icBluetooth"
                        android:layout_marginStart="14dp"
                        android:text="Bluetooth"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icBluetooth"
                        android:layout_toEndOf="@id/icBluetooth"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Manage paired devices and audio"
                        android:textSize="13sp"
                        android:textColor="#B3FFFFFF"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_pill"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="On   •   2 devices connected"
                    android:textSize="12sp"
                    android:textColor="#4DEBFF"/>
            </LinearLayout>
        </FrameLayout>

        <!-- ===== WI-FI ===== -->
        <FrameLayout
            android:id="@+id/cardWifi"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toEndOf="@id/cardBluetooth"
            app:layout_constraintTop_toBottomOf="@id/cardTime">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_glow_blue"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- TOP ROW -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/icWifi"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_wifi"
                        app:tint="#FFFFFF" />

                    <!-- Toggle circle (right) -->
                    <View
                        android:id="@+id/toggleWifi"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_toggle_circle"/>

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icWifi"
                        android:layout_marginStart="14dp"
                        android:text="Wi-Fi"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icWifi"
                        android:layout_toEndOf="@id/icWifi"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="In-car hotspot and networks"
                        android:textSize="13sp"
                        android:textColor="#B3FFFFFF"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_pill"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="Connected   •   Auto-join enabled"
                    android:textSize="12sp"
                    android:textColor="#4DEBFF"/>
            </LinearLayout>
        </FrameLayout>

        <!-- ================= THIRD ROW ================= -->

        <!-- ===== CALL FEATURES ===== -->
        <FrameLayout
            android:id="@+id/cardCallFeatures"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            app:layout_constraintWidth_percent="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardDnd">

            <!-- Glow -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_glow_purple"/>

            <!-- Glass -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_glass_card"/>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top Row -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/icCall"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:background="@drawable/bg_icon_circle"
                        android:padding="8dp"
                        android:src="@drawable/ic_call_img"
                        app:tint="#FFFFFF" />

                    <!-- Toggle circle -->
                    <View
                        android:id="@+id/toggleCall"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/bg_toggle_circle"/>

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/icCall"
                        android:layout_marginStart="14dp"
                        android:text="Call Features"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icCall"
                        android:layout_toEndOf="@id/icCall"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Auto answer and call overlay"
                        android:textSize="13sp"
                        android:textColor="#B3FFFFFF"/>
                </RelativeLayout>

                <!-- Bottom Status -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_pill"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="6dp"
                    android:text="Auto answer on   •   Overlay enabled"
                    android:textSize="12sp"
                    android:textColor="#9C6BFF"/>
            </LinearLayout>

        </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
