<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bluetoth_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Wi-Fi"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:text="Network and Internet Connectivity"
            android:textSize="14sp"
            android:textColor="#9AA0A6"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:text="Wi-Fi  is  On\nConnected to Internet"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:checked="true"
                android:thumbTint="#1DE9B6"
                android:trackTint="#0F766E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Paired Devices -->
        <TextView
            android:text="CURRENT  NETWORK"
            android:textColor="#9AA0A6"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_card_activebluetooth"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_bluetooth"/>

            <TextView
                android:text="Starlink_Home_5G\nConnected &amp; 5.0 GHz"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Forgot"
                android:textColor="#00E5FF"
                android:textSize="12sp"
                android:padding="10dp"
                android:background="@drawable/bg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="SAVED  NETWORKS"
            android:textColor="#9AA0A6"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_card_activebluetooth"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_dark_bluettoth"/>

            <TextView
                android:text="Office_Guest\nSaved &amp; Auto-connect off"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:textColor="#00E5FF"
                android:textSize="12sp"
                android:padding="10dp"
                android:src="@drawable/ic_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/bg_side_panel_blue"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <TextView
            android:text="NEARBY NETWORKS"
            android:textColor="#9AA0A6"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Searching for devices..."
            android:textColor="#00E5FF"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_dark_bluettoth"/>

            <TextView
                android:layout_width="251dp"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:text="Tesla_Service\nWPA2 â— Secure"
                android:textColor="#9AA0A6"
                android:textSize="14sp" />
            <ImageView
                android:textColor="#00E5FF"
                android:textSize="12sp"
                android:padding="10dp"
                android:src="@drawable/ic_wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_dark_bluettoth"/>

            <TextView
                android:layout_width="256dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:text="XFinity_Free\nOpen Network"
                android:textColor="#9AA0A6"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:padding="10dp"
                android:src="@drawable/ic_wifi"
                android:textColor="#00E5FF"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
