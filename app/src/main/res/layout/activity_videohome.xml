<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apps_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_gradient">

    <!-- ================= TOP STATUS BAR ================= -->
    <include
        layout="@layout/layout_top_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     ================= MAIN CONTENT =================
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#1a1a1a">

        <!-- ================= LEFT SIDEBAR ================= -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="20dp">

            <ImageButton
                android:id="@+id/btnhome"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/home_icon"
                android:layout_marginVertical="15dp"/>

            <ImageButton
                android:id="@+id/btnvideoplayer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/player_video_icon"
                android:layout_marginVertical="15dp"/>

            <ImageButton
                android:id="@+id/btnvideo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/videoapp"
                android:layout_marginVertical="15dp"/>

            <ImageButton
                android:id="@+id/btnmusic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/musicapp"
                android:layout_marginVertical="15dp"/>

            <ImageButton
                android:id="@+id/btnfolder"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/folder_icon"
                android:layout_marginVertical="15dp"/>

            <ImageButton
                android:id="@+id/btnHeartSidebar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/heart_filled"
                android:contentDescription="Favorites"/>

        </LinearLayout>

        <!-- ================= RIGHT CONTENT ================= -->
<!--        <ScrollView-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1">-->

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <EditText
                android:id="@+id/search_box"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:hint="Search Media"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:textSize="16sp"
                android:paddingStart="15dp"
                android:paddingEnd="45dp"
                android:background="#333333"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:drawableEnd="@drawable/search"
                android:drawablePadding="10dp"/>




                <!--  ===================== Continue Watching Section =====================  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue Watching"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <!--  Video Box 1  -->
                        <LinearLayout
                            android:id="@+id/box1"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/cover_image1"
                            android:gravity="start|bottom"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Beach Top View"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="start"/>
                        </LinearLayout>
                        <!--  Video Box 2  -->
                        <LinearLayout
                            android:id="@+id/box2"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/penguin_image"
                            android:gravity="start|bottom"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kidntoons"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="start"/>
                        </LinearLayout>
                        <!--  Video Box 3  -->
                        <LinearLayout
                            android:id="@+id/box3"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/jangal_image"
                            android:gravity="start|bottom"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giggly.Groove"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="start"/>
                        </LinearLayout>
                        <!--  Video Box 4  -->
                        <LinearLayout
                            android:id="@+id/box4"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/beautiful_world_image"
                            android:gravity="start|bottom"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Azzatto.ai"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="start"/>
                        </LinearLayout>
                        <!--  Video Box 5  -->
                        <LinearLayout
                            android:id="@+id/box5"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/traffic_image"
                            android:gravity="start|bottom"
                            android:layout_marginEnd="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The.Meow.Meow"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="start"/>
                        </LinearLayout>
                        <!--  Video Box 6  -->
                        <LinearLayout
                            android:id="@+id/box6"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/beach_image"
                            android:gravity="start|bottom"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shashwat Sachdev"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="start"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <!--  ===================== Media Library Section =====================  -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media Library"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:layout_marginTop="20dp"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scrollbars="none">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <!--  BOX 1 : Movies  -->
                        <LinearLayout
                            android:id="@+id/moviesBox"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/boxicon_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:layout_marginEnd="10dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/moviesvideo_icon"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Movies"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!--  BOX 2 : TV Shows  -->
                        <LinearLayout
                            android:id="@+id/tvshowsBox"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/boxicon_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:layout_marginEnd="10dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/tvshows_icon"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TV Shows"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!--  BOX 3 : Music  -->
                        <LinearLayout
                            android:id="@+id/musicBox"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/boxicon_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:layout_marginEnd="10dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/musicalnote_icon"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Music"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!--  BOX 4 : Downloads  -->
                        <LinearLayout
                            android:id="@+id/downloadsBox"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/boxicon_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp"
                            android:layout_marginEnd="10dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/download_icon"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downloads"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!--  BOX 5 : Favorites  -->
                        <LinearLayout
                            android:id="@+id/favoritesBox"
                            android:layout_width="200dp"
                            android:layout_height="120dp"
                            android:background="@drawable/boxicon_bg"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="10dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/favorite_icon"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Favorites"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/layout_bottom_nav"/>

</LinearLayout>

