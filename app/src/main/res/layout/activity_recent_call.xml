<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0F1418"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/callNavBar"
        layout="@layout/call_nav_layout"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="56dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/rec_title"
        android:layout_width="154dp"
        android:layout_height="40dp"
        android:layout_margin="24dp"
        android:text="Recent Calls"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Filters -->
    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/rec_title"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All calls"
            android:textColor="#00E5FF"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Missed"
            android:textColor="#9FA4AA"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outgoing"
            android:textColor="#FBFBFB"
            android:padding="10dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listContacts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="8dp"

        android:padding="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        app:layout_constraintTop_toBottomOf="@id/filterLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/callNavBar"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>
