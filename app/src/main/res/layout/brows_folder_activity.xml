<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apps_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_gradient">

    <!-- ================= TOP STATUS BAR ================= -->
    <include
        layout="@layout/layout_top_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- ================= SCROLLABLE CONTENT ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Search Box -->
            <EditText
                android:id="@+id/searchBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:background="@android:color/darker_gray"/>

            <!-- Heading -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Browse Folders"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"/>

            <!-- Grid Layout -->
            <GridLayout
                android:id="@+id/folderGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:useDefaultMargins="true">

                <!-- Camera Roll -->
                <LinearLayout
                    android:id="@+id/camerarollbox"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A1A">

                    <TextView

                        android:text="Camera Roll"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Downloads -->
                <LinearLayout
                    android:id="@+id/downloadbox"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A1A">

                    <TextView
                        android:text="Downloads"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Movies -->
                <LinearLayout
                    android:id="@+id/moviesBox"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A1A">

                    <TextView
                        android:text="Movies"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- 4 Music Videos -->

                <LinearLayout
                    android:id="@+id/musicbox"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A1A">

                    <TextView
                        android:text="Music Videos"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- 5 Dashcam -->
                <LinearLayout
                    android:id="@+id/dashcamBox"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A1A">

                    <TextView
                        android:text="Dashcam"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- 6 Favorite -->
                <LinearLayout
                    android:id="@+id/favoritrbox"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#1A1A1A">

                    <TextView
                        android:text="Favorite"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ================= BOTTOM NAV FIXED ================= -->
    <include
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
