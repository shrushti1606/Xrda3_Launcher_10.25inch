<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SCROLL VIEW -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- VERTICAL CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <!-- ================= ROW ONE ================= -->
            <LinearLayout
                android:id="@+id/row_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- CALL -->
                <RelativeLayout
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgCall"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/phoneapp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgCall"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="CALL"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <!-- MUSIC -->
                <RelativeLayout
                    android:id="@+id/music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgmusic"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/music"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgmusic"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="Music"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <!-- CONTACTS -->
                <RelativeLayout
                    android:id="@+id/contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgcon"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/contactsapp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgcon"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="CONTACTS"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <!-- CAR -->
                <RelativeLayout
                    android:id="@+id/car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgCar"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/carapp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgCar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="CAR"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </LinearLayout>

            <!-- ================= ROW TWO ================= -->
            <LinearLayout
                android:id="@+id/row_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50dp">

                <!-- VIDEO -->
                <RelativeLayout
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgvideo"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/video"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgvideo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="YOUTUBE"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <!-- SETTINGS -->
                <RelativeLayout
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgsettings"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/settings"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgsettings"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="WHATSAPP"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <!-- MAP -->
                <RelativeLayout
                    android:id="@+id/map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgmap"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="24dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/mapapp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgmap"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="MAP"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
