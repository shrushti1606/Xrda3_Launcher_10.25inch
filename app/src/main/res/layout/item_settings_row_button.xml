<LinearLayout android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_settings_row"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/bluetoth" />

    <!-- TEXT CONTAINER -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/idblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Devices"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage paired phones and headsets"
            android:textColor="#9AA0A6"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Connected"
        android:textColor="#0E1114"
        android:textSize="12sp"
        android:padding="6dp"
        android:background="@drawable/bg_connected_badge"/>
</LinearLayout>
