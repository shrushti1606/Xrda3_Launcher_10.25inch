    </style>

        <style name="Theme.XRDA3_Launcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">

            <!-- Primary -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
            <item name="colorOnPrimary">@color/text_primary</item>

            <!-- Accent -->
            <item name="colorSecondary">@color/colorAccent</item>
            <item name="colorOnSecondary">@color/text_primary</item>

            <!-- Background -->
            <item name="android:windowBackground">@drawable/bg_main_gradient</item>

            <!-- Text -->
            <item name="android:textColorPrimary">@color/text_primary</item>
            <item name="android:textColorSecondary">@color/text_secondary</item>

            <!-- Status bar -->
            <item name="android:statusBarColor">@color/bg_start</item>
            <item name="android:windowLightStatusBar">false</item>

        </style>

    <style name="NeonSwitch">
        <item name="colorControlActivated">#7B61FF</item>
        <item name="android:thumbTint">#7B61FF</item>
